{
	"name": "pythonpath-setter",
	"publisher": "datasentics",
	"displayName": "PYTHONPATH setter",
	"description": "Adds source directory/directories to PYTHONPATH",
	"version": "0.0.1",
	"author": {
        "name": "Jiri Koutny <jirkakoutny@datasentics.com>"
	},
    "license": "MIT",
	"homepage": "https://github.com/pyfony/pythonpath-setter",
	"icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/pyfony/pythonpath-setter"
    },
    "bugs": {
        "url": "https://github.com/pyfony/pythonpath-setter/issues"
    },
	"engines": {
		"vscode": "^1.44.0"
	},
	"keywords": [
        "python",
        "pythonpath"
    ],
    "categories": [
        "Other"
    ],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "PYTHONPATH setter",
			"properties": {
				"pythonPathSetter.sourceDirs": {
					"label": "Source directories",
					"type": "array",
					"items": {
                        "type": "string"
                    },
                    "default": ["src"],
					"description": "Source directories",
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
